<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard1.1</TargetFramework>
    <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
    <Version>1.1.1</Version>
    <Authors>Ed Ball</Authors>
    <Company />
    <Product />
    <Description>A simple library for reading command-line arguments.</Description>
    <Copyright>Copyright 2017 Ed Ball</Copyright>
    <PackageLicenseUrl>https://raw.githubusercontent.com/ejball/ArgsReading/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>http://ejball.com/ArgsReading/</PackageProjectUrl>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/ejball/ArgsReading.git</RepositoryUrl>
    <PackageTags>command-line command line console shell argument option parser</PackageTags>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <TreatSpecificWarningsAsErrors />
    <DocumentationFile>bin\Release\netstandard1.1\ArgsReading.xml</DocumentationFile>
    <DebugType>embedded</DebugType>
    <DebugSymbols>True</DebugSymbols>
    <SourceLinkCreate>True</SourceLinkCreate>
    <SourceLinkTest>True</SourceLinkTest>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <TreatWarningsAsErrors>True</TreatWarningsAsErrors>
    <TreatSpecificWarningsAsErrors />
    <DocumentationFile>bin\Debug\netstandard1.1\ArgsReading.xml</DocumentationFile>
    <DebugType>embedded</DebugType>
    <DebugSymbols>True</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="SourceLink.Create.GitHub" Version="2.0.2" PrivateAssets="all" />
    <DotNetCliToolReference Include="dotnet-sourcelink" Version="2.0.2" />
    <DotNetCliToolReference Include="dotnet-sourcelink-git" Version="2.0.2" />
  </ItemGroup>

</Project>